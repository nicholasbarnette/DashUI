{
	"compilerOptions": {
		"target": "es5",
		"module": "es2015",
		"moduleResolution": "node",
		"jsx": "react",
		"declaration": true,
		"outDir": "./build",
		"strict": true,
		"esModuleInterop": true,
		"lib": ["es5", "dom", "es6", "es2015.promise"]
	},
	"include": ["src/**/*"],
	"exclude": ["**/node_modules", "**/__tests__", "**/__stories__", "build"]
}
